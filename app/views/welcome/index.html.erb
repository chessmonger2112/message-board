<h1 class="center">Message Board</h1>

<% length = @messages.length %>
<% @messages.each do |message| %>
<% user_id = message.user_id %>
<% user_email = User.find(user_id).email %>
  <h4 class="center"><span class="green"><%=message.content %></span> Posted by <a class="blue" href="/show/<%= user_id%>"><%= user_email%></a></h4>
<% end %>

<div id="messageContainer" class="center">
  <form method="post" action="/save">
    <input id="message" name="message" type="text">
    <input id="submitEmail" value="<%= @email %>" name="email" type="text">
    <button id="messageSubmit" type="submit">Submit</button>
</div>
